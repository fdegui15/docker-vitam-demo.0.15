[ ca ]
default_ca      = CA_default

[ CA_default ]
dir             = ./pki
certs           = $dir/ca/certs/timestamping
new_certs_dir   = $dir/tempcerts
database        = $dir/config/timestamping/index.txt
certificate     = $dir/ca/timestamping/ca-root.crt
serial          = $dir/config/timestamping/serial
private_key     = $dir/ca/timestamping/ca-root.key
default_days    = 3650
default_md      = sha256
preserve        = no
policy          = policy_match
unique_subject  = no

[ CA_intermediate ]
dir             = ./pki
certs           = $dir/ca/timestamping
new_certs_dir   = $dir/tempcerts
database        = $dir/config/timestamping/index.txt
certificate     = $dir/ca/timestamping/ca-intermediate.crt
serial          = $dir/config/timestamping/serial
private_key     = $dir/ca/timestamping/ca-intermediate.key
default_days    = 1095
default_md      = sha256
preserve        = no
policy          = policy_match
unique_subject  = no


[ policy_match ]
countryName                     = match
stateOrProvinceName             = match
localityName		            = match
organizationName                = match
organizationalUnitName          = optional
commonName                      = supplied
emailAddress                    = optional

[ req ]
distinguished_name              = req_distinguished_name

[ req_distinguished_name ]
countryName                     = Pays
countryName_default             = FR
stateOrProvinceName             = Departement
stateOrProvinceName_default     = idf
localityName                    = Ville
localityName_default            = Paris
organizationName        	    = Organisation
organizationName_default        = Vitam
commonName                      = Nom ou URL
commonName_max                  = 64
emailAddress                    = Adresse Email
emailAddress_max                = 40

[CA_ROOT]
nsComment                       = "CA Racine"
subjectKeyIdentifier            = hash
authorityKeyIdentifier          = keyid,issuer:always
basicConstraints                = critical,CA:TRUE,pathlen:1
keyUsage                        = keyCertSign, cRLSign

[CA_SSL]
nsComment                       = "CA SSL"
basicConstraints                = critical,CA:TRUE,pathlen:0
subjectKeyIdentifier            = hash
authorityKeyIdentifier          = keyid,issuer:always
issuerAltName                   = issuer:copy
keyUsage                        = keyCertSign, cRLSign
nsCertType                      = sslCA

[TIMESTAMPING_RSA_SSL]
nsComment                       = "Certificat Serveur SSL"
subjectKeyIdentifier            = hash
authorityKeyIdentifier          = keyid,issuer:always
issuerAltName                   = issuer:copy
subjectAltName                  = DNS:ingest-external.service.consul
basicConstraints                = critical,CA:FALSE
keyUsage                        = digitalSignature, nonRepudiation, keyEncipherment
nsCertType                      = server
extendedKeyUsage                = critical,timeStamping

[CLIENT_RSA_SSL]
nsComment                       = "Certificat Client SSL"
subjectKeyIdentifier            = hash
authorityKeyIdentifier          = keyid,issuer:always
issuerAltName                   = issuer:copy
subjectAltName                  = critical,email:copy,email:support@programmevitam.fr
basicConstraints                = critical,CA:FALSE
keyUsage                        = digitalSignature, nonRepudiation, keyEncipherment
nsCertType                      = client
extendedKeyUsage                = clientAuth


[ extension_ca_root ]
subjectKeyIdentifier			= hash
authorityKeyIdentifier			= keyid:always,issuer
basicConstraints 				= CA:true
